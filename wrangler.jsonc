{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "wp-ai-generator",
	"main": "src/index.ts",
	"compatibility_date": "2025-10-04",
	"observability": {
		"enabled": true
	},

	// --- BINDINGS: Cloudflare Resources for the AI Assistant ---
	
	"r2_buckets": [
		{
			"bucket_name": "plugin-zip-storage",
			"binding": "PLUGIN_STORAGE"
		}
	],
	
	"vectorize": [
		{ 
			"binding": "WP_INDEX", 
			"index_name": "wp-knowledge-index" 
		}
	],

	"ai": {
		"binding": "AI"
	}
	
	// Note: The Anthropic API key is stored separately using 'wrangler secret put ANTHROPIC_API_KEY'
	// The AI Gateway ID is used directly in the Worker's fetch() URL.
}